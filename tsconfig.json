{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": [
      "es6",
      "es2015.promise",
      "dom"
    ],
    "strict": true,
    "strictNullChecks": true
  },
  "files": [
    "@types/module.d.ts",
    "@types/mtsdk.d.ts",
    "@types/mtsdk-panel.d.ts",
    "@types/types.d.ts"
  ],
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}