.mt-monitor-box
  position fixed;
  width 400px;
  top 10px;
  right 10px;
  color #e1e1e1;
  z-index 1000000000;
  font-size 12px;
  border-radius 3px;
  &::before
    display block;
    content '';
    position absolute;
    top 20px;
    right 20px;
    bottom 20px;
    left 20px;
    z-index -1;
    filter blur(20px);
  &::after
    display block;
    content '';
    position absolute;
    top 0;
    right 0;
    bottom 0;
    left 0;
    z-index -2;
    box-shadow 1px 2px 5px 2px hsla(0,0%,0%,0.9);
    background rgba(0,0,0,0.8);
  .mt-monitor-title
    text-align right;
    cursor pointer;
    background rgba(0,0,0,0.7);
    user-select none;
    padding 10px;
  .mt-monitor-content
    padding 10px;
    max-height 600px;
    transform scale3d(1,1,1);
    transform-origin top;
    transition transform 0.1s,max-height 0.4s;
    &.hide
      max-height 0;
      opacity 0;
      visibility hidden;
  .mt-monitor-content-panel
    margin-top 10px;
    display none;
    .mt-panel-canvas
      height 0;
      position relative;
      .chartjs-tooltip
        position absolute;
        z-index 100000000
        display inline-block;
        padding 8px;
        border-radius 5px;
        background rgba(0,0,0,0.9);
        color #fff;
    &.show
      display block;
      .mt-panel-canvas
        height auto;
        width 100%;
