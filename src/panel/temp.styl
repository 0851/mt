.mt-monitor-box
  position fixed;
  width 300px;
  top 10px;
  z-index 1000000000;
  font-size 12px;
  .mt-monitor-bg
    content '';
    position absolute;
    top 0;
    right 0;
    bottom 0;
    left 0;
    z-index 1000000001;
    border-radius 3px;
    box-shadow 1px 3px 2px 2px rgba(133,133,133,0.4);
    background rgba(133,133,133,0.4);
    backdrop-filter blur(10px) brightness(110%);
  .mt-monitor
    position relative;
    z-index 1000000002;
    padding 10px;
  .mt-monitor-title
    width 100%;
    text-align right;
    cursor pointer;
    user-select none;
  .mt-monitor-content
    height auto;
    max-height 500px;
    overflow-y auto;
    transform scale3d(1,1,1);
    transform-origin top;
    transition transform 0.5s,opacity 0.3s,visibility 0.3s,max-height 0.3s;
    &.hide
      opacity 0;
      max-height 0px;
      visibility hidden;